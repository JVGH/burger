{{> common/header}}

<div class="container">
  <main>
    <div class="row text-center">
      <div class="col-sm">
        <form action="/create" method="POST">
          <div class="form-group">
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text" id="burgerInput"><i class="fas fa-hamburger"></i></span>
              </div>
              <input type="text" id="inputBurger" class="form-control" placeholder="Name Your Burger"
                aria-label="BurgerName" aria-describedby="burgerInput" name="name" required>
              <div class="input-group-append">
                <button class="btn btn-outline-dark" type="submit">Create</button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
    <div class="row text-center">
      <div class="col-sm">
        <ul class="list-group">
          {{#each burgers}}
          {{#unless isDevoured }}
          <li class="list-group-item d-flex justify-content-between align-items-center mb-3">
            {{name}}
            <button class="btn btn-outline-dark btnDevour" data-id="{{id}}" type="button">Devour</button>
          </li>
          {{/unless}}
          {{/each}}
        </ul>
      </div>
      <div class="col-sm">
        <ul class="list-group">
          {{#each burgers}}
          {{#if isDevoured }}
          <li class="list-group-item d-flex justify-content-between align-items-center mb-3">
            {{name}}
          </li>
          {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
  </main>
</div>
{{> common/footer}}